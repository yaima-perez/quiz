<h1>I nostri quiz</h1>

<table>
  <thead>
    <tr>
      <th>Argomento</th>
      <th>Domanda</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quizzes.each do |quiz| %>
      <tr>
        <td><%= quiz.subject %></td>
        <td><%= quiz.question %></td>
        <td><%= link_to 'Finestra', quiz %></td>
        <td><%= link_to 'Modificare', edit_quiz_path(quiz) %></td>
        <td><%= link_to 'Cancellare', quiz, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuovo Quiz', new_quiz_path %>
