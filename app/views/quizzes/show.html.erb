<p id="notice"><%= notice %></p>

<p>
  <strong>Subject:</strong>
  <%= @quiz.subject %>
</p>

<p>
  <strong>Question:</strong>
  <%= @quiz.question %>
</p>

<p>
  <strong>Image:</strong>
  <%= image_tag @quiz.image, size: "500" %>
</p>

<h3>Risposte</h3>
<ol>
  <% @quiz.answers.each do |a| %>

  <li><%= a.text%>
    <% if a.correct? %>
        (corretta)
        <% else %>
        (Errada)
    <% end %>
  </li>
  <% end %>
</ol>

<%= link_to 'Edit', edit_quiz_path(@quiz) %> |
<%= link_to 'Back', quizzes_path %>
